<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ICON / BRAND IMAGE -->
        <ImageView
            android:id="@+id/ivBrand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_pill"
            android:contentDescription="@string/app_name"/>

        <!-- PRODUCT NAME -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivBrand"
            android:layout_alignTop="@id/ivBrand"
            android:text="PRODUCT NAME"
            android:textColor="#3A3A3A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"/>

        <!-- AVAILABILITY -->
        <LinearLayout
            android:id="@+id/availabilityWrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvName">

            <View
                android:id="@+id/dotAvailability"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_green"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tvAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="14sp"
                android:textColor="#2E7D32"/>
        </LinearLayout>

        <!-- BRAND -->
        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/ivBrand"
            android:layout_marginTop="4dp"
            android:text="Pfizer"
            android:textSize="13sp"
            android:textColor="#607D8B"/>

        <!-- DOSAGE -->
        <TextView
            android:id="@+id/tvDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBrand"
            android:layout_toEndOf="@id/ivBrand"
            android:text="500mg"
            android:textSize="12sp"
            android:textColor="#78909C"/>

        <!-- PRICE -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDosage"
            android:layout_toEndOf="@id/ivBrand"
            android:layout_marginTop="8dp"
            android:text="100,000 LBP"
            android:textColor="#1693D1"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- QTY CONTROLLER -->
        <LinearLayout
            android:id="@+id/qtyWrap"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tvPrice"
            android:background="@drawable/qty_bg"
            android:gravity="center"
            android:paddingHorizontal="6dp">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
