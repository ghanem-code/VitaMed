<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pharmacy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header المختصر -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VitaMed"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_vitamed" />
        </LinearLayout>

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Username"
            android:textColor="#738186" />

        <EditText
            android:id="@+id/etRegUsername"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/et_bg_selector"
            android:hint="example"
            android:inputType="textPersonName"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#212121"
            android:textColorHint="#9AA7AC" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Email address"
            android:textColor="#738186" />

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/et_bg_selector"
            android:hint="example@example.com"
            android:inputType="textEmailAddress"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#212121"
            android:textColorHint="#9AA7AC" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Password"
            android:textColor="#738186" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/et_bg_selector"
                android:hint="********"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="#212121"
                android:textColorHint="#9AA7AC" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Confirm password"
            android:textColor="#738186" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRegConfirm"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/et_bg_selector"
                android:hint="********"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="#212121"
                android:textColorHint="#9AA7AC" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Mobile number"
            android:textColor="#738186" />

        <EditText
            android:id="@+id/etRegPhone"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/et_bg_selector"
            android:hint="+961 1 123 456"
            android:inputType="phone"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#212121"
            android:textColorHint="#9AA7AC" />

        <!-- Pharmacy name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Pharmacy name"
            android:textColor="#738186" />

        <EditText
            android:id="@+id/etRegPharmacy"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/et_bg_selector"
            android:hint="Antoine Pharmacy"
            android:inputType="textCapWords"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#212121"
            android:textColorHint="#9AA7AC" />
        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:text="Location"
            android:textColor="#738186" />

        <EditText
            android:id="@+id/etRegLocation"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/et_bg_selector"
            android:hint="Beirut, Hamra"
            android:inputType="textCapWords"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#212121"
            android:textColorHint="#9AA7AC" />


        <!-- Submit -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_login_selector"
            android:backgroundTint="#0097A7"
            android:fontFamily="sans-serif-medium"
            android:minWidth="0dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Create account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#0097A7" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/tvHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:text="Do you have an account?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
